<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_background"
    android:backgroundTint="#FFFFFF">


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">





    <androidx.coordinatorlayout.widget.CoordinatorLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:orientation="horizontal"
>
        <TextView
            android:id="@+id/cercaProfilo"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_margin="44dp"
            android:gravity="left"
            android:text="Cerca il tuo profilo "

            android:textColor="@color/black"
            android:textSize="28dp"
            android:textStyle="bold" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/return_to_recupera_psw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


android:layout_gravity="right"
        android:layout_margin="35dp"
        android:backgroundTint="@color/teal_700"
        android:src="@drawable/arrow"
        android:tint="#FFFFFF"
        app:tint="@color/white" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginTop="30dp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="Dopo aver inserito l'email controlla la tua casella di posta elettronica "

        android:textColor="@color/color_word"
        android:textSize="18dp"
        android:textStyle="bold" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/recuperaPassword"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:hint="Email"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_gravity="center"
        android:textColorHint="#99000000"
        app:boxBackgroundMode="outline"

        app:boxStrokeColor="@color/teal_700"
        app:boxStrokeWidth="1dp"
        app:counterEnabled="true"
        app:counterMaxLength="30"
        app:helperText="Inserisci la tua email "
        app:helperTextEnabled="true"
        app:hintTextColor="@color/teal_700">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/cercaProfiloButton"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="300dp"
        android:text="Invia email"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:backgroundTint="@color/teal_700"
        app:elevation="5dp" />
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>